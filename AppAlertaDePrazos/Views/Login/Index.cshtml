@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <div class="row" style="text-align: center; padding-top:15%">
            <h1>SISTEMA ALERTA DE PRAZOS</h1>
        </div>
        <div class="row justify-content-center" style="padding-top: 5%">
            <img src="\images\Ufu_logo.svg.png" alt="Logo UFU" style="width:200px;height:160px;">
        </div>
        <div class="row" style="padding-top: 5%">
            <div class="row mb-3 d-flex justify-content-center">
                <div class="col-sm-4">
                    <label for="credencial_email" class="form-label">E-mail:</label>
                    <input type="email" class="form-control" id="credencial_email" aria-describedby="emailHelp">
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-center">
                <div class="col-sm-4">
                    <label for="credencial_senha" class="form-label">Senha:</label>
                    <input type="password" class="form-control" id="credencial_senha">
                </div>

            </div>

            <div class="row d-flex justify-content-center">
                <div class="col-sm-4">
                    <button id="autenticar" class="btn btn-primary" onclick="autenticar()" style="width: 100%">Submit</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
          function autenticar(){
              $.ajax({
                          type: "POST",
                          url: "/Login/Autenticar",
                          data: {
                                    Email: $("#credencial_email").val().toLowerCase(),
                                    Senha: $("#credencial_senha").val()
                                },
                          async: false,
                          success: () => {
                              window.location.href = "/Home";
                          },
                          error: (result) => {
                                alert("Usuário ou senha inválidos.")
                          }
                      });
          }
                    
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>